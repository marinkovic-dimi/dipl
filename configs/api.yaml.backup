project_name: "klasifikator-api"
version: "1.0.0"

inference:
  model_checkpoint_dir: "experiments/model_wandb_20260115_213548"
  host: "0.0.0.0"
  port: 8000
  top_k: 5
  batch_size: 32
  enable_cors: true

data:
  text_column: "text"
  class_column: "group_id"

tokenization:
  vocab_size: 15000
  max_length: 40
  min_frequency: 1
  special_tokens:
    - "[PAD]"
    - "[CLS]"
    - "[UNK]"
    - "[SEP]"
    - "[MASK]"
  use_cached_tokenizer: false
  tokenizer_cache_dir: "cache/tokenizers"

model:
  embedding_dim: 768
  num_heads: 12
  num_layers: 3
  ff_dim: 3072
  dropout_rate: 0.1
  pooling_strategy: "attention"
  label_smoothing: 0.1
  top_k: 5

balancing:
  strategy: "none"

training:
  save_dir: "experiments"
  model_name: "klasifikator"
  log_level: "INFO"
  log_to_file: false
  log_dir: "logs"

wandb:
  enabled: false
